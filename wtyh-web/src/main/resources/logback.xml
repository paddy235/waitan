<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="true">
	<appender name="console" class="ch.qos.logback.core.ConsoleAppender">
		<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
			<level>INFO</level>
		</filter>
		<encoder>
			<pattern>[%date{yyyy-MM-dd HH:mm:ss}]||[%thread]||[%-5level]||[%logger:%line]||[%ex]||[%msg]||%n</pattern>
		</encoder>
	</appender>
	<appender name="sffall" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>${logDir}/wtyh.log.%d{yyyy-MM-dd}</fileNamePattern>
			<maxHistory>30</maxHistory>
		</rollingPolicy>
		<encoder class="net.logstash.logback.encoder.LogstashEncoder"></encoder>
	</appender>
	<logger name="org.springframework" level="INFO" />

	<root level="INFO">
		<appender-ref ref="console" />
		<appender-ref ref="sffall" />
	</root>
</configuration>